   M /trunk/darkplaces/makefile
   M /trunk/darkplaces/meshqueue.c
   M /trunk/darkplaces/r_crosshairs.c
   M /trunk/darkplaces/r_light.c
   M /trunk/darkplaces/r_lightning.c
   M /trunk/darkplaces/r_shadow.c
